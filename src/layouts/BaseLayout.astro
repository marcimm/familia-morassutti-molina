---
import '../styles/global.css';
import Footer from '../layouts/Footer.astro';
const { title = "História da Família", description = "" } = Astro.props;
const base = import.meta.env.BASE_URL; 
---

<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta name="robots" content="noindex, nofollow">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&family=Lora:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body data-base={base}>
    <div class="page">
      <aside class="sidebar">
        <h1>História da Família</h1>
        <small>Morassutti · Molina · Arena · Roman</small>
        <hr />

        <nav class="nav">
          <div class="nav-section">
            <div class="nav-section-title">Início</div>
            <ul class="nav-list">
              <li>
                <a class="nav-link" href={base}>Apresentação</a>
              </li>
            </ul>
            <ul class="nav-list">
              <li>
                <a class="nav-link" href={`${base}livro/sumario`}>Sumário</a>
              </li>
            </ul>
            <ul class="nav-list">
              <li>
                <a class="nav-link" href={`${base}livro/dedicatoria`}>Dedicatória</a>
              </li>
            </ul>
            <ul class="nav-list">
              <li>
                <a class="nav-link" href={`${base}livro/referencias`}>Referências</a>
              </li>
            </ul>
          </div>

          <div class="nav-section">
            <div class="nav-section-title">Família</div>
            <ul class="nav-list">
              <li>
                <a class="nav-link" href={`${base}familia/arvore`}>Árvore da família</a>
              </li>
              <li>
                <a class="nav-link" href={`${base}familia/pessoas`}>Principais antepassados</a>
              </li>
            </ul>
          </div>

          <div class="nav-section">
            <div class="nav-section-title">Parte I — Introdução e Origens</div>
            <ul class="nav-list">
              <li><a class="nav-link" href={`${base}livro/preludio`}>Prelúdio</a></li>
              <li><a class="nav-link" href={`${base}livro/cap1`}>Cap. 1 — Introdução</a></li>
              <li><a class="nav-link" href={`${base}livro/cap2`}>Cap. 2 — Linhagens</a></li>
              <li><a class="nav-link" href={`${base}livro/cap3`}>Cap. 3 — Origens Genéticas</a></li>
            </ul>
          </div>

          <div class="nav-section">
            <div class="nav-section-title">Parte II — Europa e Imigração</div>
            <ul class="nav-list">
              <li><a class="nav-link" href={`${base}livro/cap4`}>Cap. 4 — As Terras de Onde Vieram</a></li>
              <li><a class="nav-link" href={`${base}livro/cap5`}>Cap. 5 — Antepassados na Europa: Vida Rural, Sobrenomes e Cotidiano</a></li>
              <li><a class="nav-link" href={`${base}livro/cap6`}>Cap. 6 — Êxodo Europeu e a Travessia até o Brasil</a></li>
            </ul>
          </div>

          <div class="nav-section">
            <div class="nav-section-title">Parte III — Brasil: Terra Nova, Vida Nova</div>
            <ul class="nav-list">
              <li><a class="nav-link" href={`${base}livro/cap7`}>Cap. 7 — Chegada ao Brasil</a></li>
              <li><a class="nav-link" href={`${base}livro/cap8`}>Cap. 8 — Vida dos Imigrantes nas Fazendas Paulistas</a></li>
              <li><a class="nav-link" href={`${base}livro/cap9`}>Cap. 9 — Regiões da Família no Brasil</a></li>
            </ul>
          </div>

          <div class="nav-section">
            <div class="nav-section-title">Parte IV — Gerações Brasileiras</div>
            <ul class="nav-list">
              <li><a class="nav-link" href={`${base}livro/cap10`}>Cap. 10 — Primeiros casamentos no Brasil</a></li>
              <li><a class="nav-link" href={`${base}livro/cap11`}>Cap. 11 — A Segunda Grande Migração</a></li>
              <li><a class="nav-link" href={`${base}livro/cap12`}>Cap. 12 — A família moderna</a></li>
            </ul>
          </div>

          <div class="nav-section">
            <div class="nav-section-title">Acervo Fotos</div>
            <ul class="nav-list">
              <li><a class="nav-link" href={`${base}livro/album`}>Álbum Fotos</a></li>
            </ul>
          </div>

          <div class="nav-section">
            <div class="nav-section-title">Cronologia</div>
            <ul class="nav-list">
              <li><a class="nav-link" href={`${base}linha-do-tempo`}>Linha do tempo</a></li>
            </ul>
          </div>
        </nav>

      </aside>

      <main class="main">
        <div class="content">
          <slot />
        </div>
        <Footer />
      </main>
    </div>

    <script>
      (function () {
        // Lê o base passado pelo Astro
        var base = document.body.dataset.base || "/";

        // Garante que termina com "/"
        if (!base.endsWith("/")) {
          base = base + "/";
        }

        var loginPath = new URL(base + "login", window.location.origin).pathname;

        // Se já está na página de login, não faz nada
        if (window.location.pathname === loginPath) {
          return;
        }

        // Se não tem a flag de acesso, manda para o login
        if (sessionStorage.getItem("acesso") !== "ok") {
           // return;
          window.location.href = base + "login";
        }
      })();
    </script>
  </body>
</html>
